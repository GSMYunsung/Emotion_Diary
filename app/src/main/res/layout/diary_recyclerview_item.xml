<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:backgroundTint="#778899"
            android:layout_margin="20dp"
            android:elevation="20dp"
            android:background="@drawable/ch_img_background"
            android:id="@+id/month_diary_image"
            android:src="@drawable/fun"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/month_diary_date"
            android:fontFamily="@font/notosanskrmedium"
            android:layout_below="@id/month_diary_text"
            android:layout_alignLeft="@id/month_diary_text"
            android:textColor="@color/black"
            android:text="yy/mm/dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/month_diary_text"
            android:layout_alignTop="@id/month_diary_image"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/month_diary_image"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskrlight"
            android:textSize="20dp"
            android:text="제육볶음 먹은날이네"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/Relative"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</RelativeLayout>